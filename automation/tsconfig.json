{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": [
            "node"
        ],
        "resolveJsonModule": true
    },
    "include": [
        "runTests.ts",
        "tests/**/*.ts",
        "pages/**/*.ts",
        "helpers/**/*.ts"
    ]
}